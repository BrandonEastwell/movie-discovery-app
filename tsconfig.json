{
  /*"compileOnSave": true,*/
  "compilerOptions": {
    "baseUrl": "src",
    "target": "es6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "rootDir": "src",
    "skipLibCheck": true,
    "strict": true,
    //"noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "outDir": "./dist",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src"],
  "exclude": ["app/node_modules", "dist"],
  "ts-node": {
    "files": true
  }

}
