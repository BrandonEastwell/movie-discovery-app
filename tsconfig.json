{
  /*"compileOnSave": true,*/
  "compilerOptions": {
    "baseUrl": "src",
    "target": "esnext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "rootDir": "src",
    "skipLibCheck": true,
    "strict": true,
    //"noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "outDir": "./dist",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "forceConsistentCasingInFileNames": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*/*/*/*"
      ]
    },
    "noEmit": true
  },
  "include": [
    "src",
    ".next/types/**/*.ts",
    "next-env.d.ts",
    "**/*.ts", "**/*.tsx",
    ".next/types/**/*.ts",
  ],
  "exclude": [
    "app/node_modules",
    "dist"
  ],
  "ts-node": {
    "files": true
  }
}
